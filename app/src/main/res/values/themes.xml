<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuliPati" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D81B60</item>
        <item name="colorPrimaryVariant">#CF2765</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D81B60</item>
        <item name="colorSecondaryVariant">#D81B60</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonTint">#D81B60</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="subtitleTextColor">#D81B60</item>
        <item name="tabIndicatorColor">#D81B60</item>
        <item name="buttonStyle">@color/white</item>


    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FB8C00</item>
        <item name="colorControlActivated">#F4511E</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>