<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuliPati" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D81B60</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D81B60</item>
        <item name="colorSecondaryVariant">#F4511E</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">#D81B60</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="boxBackgroundColor">#121212</item>
        <item name="buttonTint">#59172F</item>
        <item name="subtitleTextColor">#D81B60</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="buttonStyle">@color/red</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FB8C00</item>
        <item name="colorControlActivated">#F4511E</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#D81B60</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/grayish</item>
    </style>

</resources>